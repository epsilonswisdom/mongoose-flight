<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flight/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
  id="new-form" 
  action="/flights/<%= flight._id %>?_method=PUT" 
  method="POST">
    <label for="airline-input">Airline:</label>
    <input 
    type="text" 
    name="airline" 
    value="<%= flight.airline %>"
    id="airline-input">
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="<%= flight.airport %>"><%= flight.airport %></option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo">Flight Number:</label>
    <input type="Number" 
    name="flightNo" 
    value="<%= flight.flightNo %>"
    id="flightNo-input">
    <label for="departure-date">Departure:</label>
    <input 
    type="datetime-local" 
    name="departure" 
    value="<%= flight.departure %> "
    id="departure-input">
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>